<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="rekin" parent="android:Theme.Holo.Light" >
        <item name="android:colorBackground">@android:color/secondary_text_dark</item>
        <item name="android:colorForeground">@android:color/secondary_text_dark</item>
        <item name="android:windowBackground">@color/accent_material_dark_1</item>
    </style>

    <style name="rekinbiznesu" parent="Theme.AppCompat.NoActionBar" >
        <item name="colorPrimary">@color/accent_material_dark_1</item>
        <item name="android:colorBackground">@color/background_material_dark</item>
    </style>

    <style name="RekinTheme" parent="AppTheme" >
        <item name="colorAccent">@color/accent_material_dark_1</item>
        <item name="android:textColorPrimary">@color/accent_material_dark_1</item>
        <item name="android:colorBackground">@color/background_material_light</item>
    </style>

</resources>
